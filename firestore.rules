// Only the signed-in agent can read/write their own docs (by agentUID)
rules_version = '2';
service cloud.firestore{
	match /databases/{database}/documents{
  	match /policies/{policyId} {
    	allow read,write: if request.auth !=null
      	&& (request.resource.data.agentUID == request.auth.uid || resource.data.agentUID == request.auth.uid);
        
    }
  }
}